<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linearLayoutMainAddEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400px">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/add_event_background" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#BF000000" />

                <ImageView
                    android:id="@+id/imageViewCross"
                    android:layout_width="43px"
                    android:layout_height="43px"
                    android:layout_margin="45px"
                    android:background="@drawable/cancel_event" />


                <EditText
                    android:id="@+id/input_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="16px"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:hint="Add Title"
                    android:padding="16px"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="80px" />
            </FrameLayout>

            <EditText
                android:id="@+id/input_event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:layout_marginTop="32px"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="Short description"
                android:textColor="@color/black_grey"
                android:textColorHint="@color/edit_text_grey"
                android:textCursorDrawable="@null"
                android:textSize="32px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:background="@color/edit_text_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="32px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitleFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="From"
                    android:textColor="@color/edit_text_grey"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/textViewFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:text="Select Date"
                    android:textColor="@color/black_grey"
                    android:textSize="32px" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="16px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitleTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To"
                    android:textColor="@color/edit_text_grey"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/textViewTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:text="Select Date"
                    android:textColor="@color/black_grey"
                    android:textSize="32px" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:background="@color/edit_text_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="32px">

                <TextView
                    android:id="@+id/textViewEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Type"
                    android:textColor="@color/edit_text_grey"
                    android:textSize="32px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewEventType"
                    android:layout_marginTop="12px"
                    android:orientation="horizontal">

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/radioButtonPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Personal"
                        android:textColor="@color/black_grey"
                        android:textSize="32px"
                        app:rbd_strokeColor="@color/add_button_purple" />

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/radioButtonClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Class"
                        android:textColor="@color/black_grey"
                        android:textSize="32px"
                        app:rbd_strokeColor="@color/add_button_purple" />

                    <com.rey.material.widget.RadioButton
                        android:id="@+id/radioButtonLecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lecture"
                        android:textColor="@color/black_grey"
                        android:textSize="32px"
                        app:rbd_strokeColor="@color/add_button_purple" />

                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDynamicCheckBoxClass"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:visibility="gone">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDynamicCheckBoxLecture"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginBottom="8px"
            android:layout_marginTop="8px"
            android:visibility="gone"></LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:background="@color/edit_text_divider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.rey.material.widget.RelativeLayout
                    android:id="@+id/relativeLayoutAdd"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_gravity="bottom"
                    android:background="@color/add_button_purple"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="32px"
                    app:rd_enable="true"
                    app:rd_rippleColor="@color/add_button_purple_for_ripple" />

                <ImageView
                    android:layout_width="58px"
                    android:layout_height="58px"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20px"
                    android:background="@drawable/done" />

            </FrameLayout>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBarAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/progressbar"/>
    </RelativeLayout>

</ScrollView>
