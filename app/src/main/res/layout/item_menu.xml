<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_attachments"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:visibility="invisible"
    android:orientation="vertical">

    <!--row 1 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/btnAnnounce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="24px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menu_attachment_announcements"
                android:layout_width="70px"
                android:layout_height="70px"
                android:background="@drawable/announcements" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:textSize="32px"
                android:text="Announcement" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnRemarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="24px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menu_attachment_remarks"
                android:layout_width="70px"
                android:layout_height="70px"
                android:background="@drawable/remarks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:textSize="32px"
                android:gravity="center"
                android:text="Class Work / Home work" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>