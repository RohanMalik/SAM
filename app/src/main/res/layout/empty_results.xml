<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutNodataFound" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <ImageView
        android:id="@+id/imageViewNoData"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerInParent="true"
        android:background="@drawable/no_data_found"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:textSize="32px"
        android:text="No Data Found."
        android:gravity="center"
        android:layout_below="@+id/imageViewNoData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16px"/>

</RelativeLayout>