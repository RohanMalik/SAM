<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listViewTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fabAddTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="32px"
            app:fab_elevation="10px"
            app:fab_iconSize="48px"
            app:fab_iconSrc="@drawable/add_button"
            app:fab_backgroundColor="@color/primary"
            app:fab_animDuration="1000"
            app:rd_rippleAnimDuration="500"
            app:rd_rippleColor="@color/primary_lighter"
            app:rd_enable="true"
            />


    </FrameLayout>


</LinearLayout>