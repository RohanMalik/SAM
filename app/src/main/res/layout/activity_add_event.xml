<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.monkeybusiness.jaaar.Activity.AddEventActivity">


    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dashboard_toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.rey.material.widget.Spinner
                android:id="@+id/input_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="40px"
                android:outlineProvider="paddedBounds" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="16px"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/input_event_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:textSize="32px" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Date"
                    android:layout_weight="1"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select Date"
                    android:layout_weight="2"
                    android:layout_marginLeft="60px"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48px"
                android:layout_marginTop="16px"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Max Marks "
                    android:layout_weight="1"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

                <EditText
                    android:id="@+id/editTextMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Enter Marks"
                    android:inputType="number"
                    android:layout_weight="2"
                    android:layout_marginRight="20px"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48px"
                android:layout_marginTop="16px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Min Marks "
                    android:layout_weight="1"
                    android:textColor="@color/sub_tab"
                    android:textSize="36px" />

                <EditText
                    android:id="@+id/editTextMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Enter Marks"
                    android:inputType="number"
                    android:layout_weight="2"
                    android:layout_marginRight="20px"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48px"
                android:layout_marginTop="16px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Duration"
                    android:layout_weight="1"
                    android:textColor="@color/sub_tab"
                    android:textSize="36px" />

                <EditText
                    android:id="@+id/editTextDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Duration"
                    android:layout_weight="2"
                    android:layout_marginRight="20px"
                    android:inputType="number"
                    android:textColor="@color/sub_tab"
                    android:textSize="32px" />

            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/buttonAddEvent"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_margin="32px"
                android:background="@drawable/non_border_simple_button_corner"
                android:elevation="10px"
                android:text="CREATE TEST"
                android:textColor="#fff"
                android:textSize="32px"
                app:rd_enable="true"
                app:rd_rippleColor="@color/primary" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
